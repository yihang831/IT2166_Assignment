@model IT2166_Assignment.Models.Booking

@{
    ViewData["Title"] = "Delete";
}

<div class="col-11 mx-auto pt-0 p-0">

    <div class="text-center bg-danger">
        <h1>Are you sure you want to delete this?</h1>
    </div>

    <div class="card">
        <div class="card-header bg-success text-uppercase text-white" style="height:45px">
            <h4>Delete Booking</h4>
        </div>
        <form enctype="multipart/form-data" asp-action="Delete">

            <input type="hidden" asp-for="Id"/>

            <div class="row">
                <div class="col-md-6">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <br />
                        <label asp-for="FullName" class="control-label">Full Name:</label>
                        <input asp-for="FullName" class="form-control-plaintext" readonly />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="Email" class="control-label">Email:</label>
                        <input asp-for="Email" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="NRIC" class="control-label">NRIC:</label>
                        <input asp-for="NRIC" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="Gender" class="control-label">Gender:</label>
                        <input asp-for="Gender" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="MaritalStatus" class="control-label">Marital Status:</label>
                        <input asp-for="MaritalStatus" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="Address" class="control-label">Address:</label>
                        <input asp-for="Address" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="DOB" class="control-label">Date Of Birth</label>
                        <input asp-for="DOB" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group">
                        <br />
                        <label asp-for="ContactNo" class="control-label">Contact No.:</label>
                        <input asp-for="ContactNo" class="form-control-plaintext" readonly />
                    </div>
                </div>
                
                <div class="col-12 btn-group">
                    <div class="col-6 form-group text-right p-2">
                        <a asp-action="Index" class="btn btn-secondary">&nbsp;Back&nbsp;</a>
                    </div>
                    <div class="col-6 form-group text-left p-2">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
